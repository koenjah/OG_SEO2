        </div>
      </div>
    </div>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      var rateLimitModal = new bootstrap.Modal(document.getElementById('rateLimitModal'));
      rateLimitModal.show();
    });
  </script>
{{/if}}

<script src="https://cdn.jsdelivr.net/npm/@fingerprintjs/fingerprintjs@4/dist/fp.min.js"></script>
<script>
  // Wacht tot de DOM volledig geladen is (goede gewoonte)
  document.addEventListener('DOMContentLoaded', function() {
    // Definieer een async functie zodat we await kunnen gebruiken voor FingerprintJS
    const initializeAndCheckDomain = async () => {
      try {
        // 1. Haal Fingerprint ID op en zet het in de hidden input
        let visitorId = ''; // Houd de ID hier bij
        const visitorIdInput = document.getElementById('visitorId');
        if (typeof FingerprintJS !== 'undefined') {
            const fp = await FingerprintJS.load();
            const result = await fp.get();
            visitorId = result.visitorId;
            if (visitorIdInput) {
                visitorIdInput.value = visitorId;
                // console.log("Fingerprint Visitor ID:", visitorId);
            } else {
                console.warn("Hidden input #visitorId niet gevonden!");
            }
        } else {
            console.error("FingerprintJS library niet geladen!");
        }

        // 2. Lees de 'domain' parameter uit de *browser* URL (van het iframe)
        const urlParams = new URLSearchParams(window.location.search);
        const domainFromQuery = urlParams.get('domain'); // Gebruik 'domain'
        // console.log("Domain parameter uit iframe URL:", domainFromQuery);

        if (domainFromQuery) {
            const domainInput = document.getElementById('domain');
            const reportForm = document.querySelector('form[action="/generate-report"]');

            if (domainInput && reportForm) {
                // console.log("Domein gevonden via URL, invullen en submitten...");
                const decodedDomain = decodeURIComponent(domainFromQuery);
                domainInput.value = decodedDomain; // Vul de zichtbare input in

                // Zorg dat de visitorId ook echt in het formulier staat voor het submitten
                if (visitorIdInput && visitorIdInput.value === visitorId) {
                   // Wacht heel even voor de zekerheid
                    setTimeout(() => {
                        // console.log(`Formulier wordt nu gesubmit voor ${decodedDomain} met visitor ID ${visitorId}`);
                        reportForm.submit();
                    }, 150); // Kleine vertraging
                } else {
                    console.error("Visitor ID kon niet correct worden ingesteld vóór submit. Formulier niet automatisch verzonden.");
                }
            } else {
                console.error("Kon domein input (#domain) of formulier (action='/generate-report') niet vinden.");
            }
        } else {
            // console.log("Geen 'domain' parameter gevonden in iframe URL, formulier wordt niet automatisch gesubmit.");
            // Optioneel: check of de server toch iets heeft ingevuld (als fallback voor directe bezoekers)
            const serverPrefill = '{{prefill.url}}'; // Lees de server-waarde (die nu waarschijnlijk leeg is via iframe)
            if (serverPrefill && domainInput) {
                 domainInput.value = serverPrefill;
                 // console.log("Domein ingevuld via server prefill (waarschijnlijk direct bezoek):", serverPrefill);
                 // Hier niet automatisch submitten, laat gebruiker klikken.
            }
        }
      } catch (error) {
        console.error("Fout tijdens initialisatie script:", error);
      }
    };

    // Roep de initialisatiefunctie aan
    initializeAndCheckDomain();
  });
</script>
